type Investment {
  id: ID! @unique
  address: String!
  price: Float
  monthly_rent: Float
  mortgage_downpayment: Float
  mortgage_amount: Float
  mortgage_interest_rate: Float
  mortgage_period: Float
  owner: User!
  expenses: [Expense!]!
    @relation(name: "ExpensesForInvestment", onDelete: CASCADE)
}

type Expense {
  id: ID! @unique
  title: String!
  description: String!
  price: Float
  investment: Investment! @relation(name: "ExpensesForInvestment")
  date: String
}

type Provider {
  id: ID! @unique
  name: String!
  type: String!
  reviews: [Review!]! @relation(name: "ReviewsForProviders", onDelete: CASCADE)
  phone_number: String!
  email: String!
  street: String!
  city: String!
  state: String!
  zip: String!
  is_verified: Boolean! @default(value: false)
  owner: User
}

type User {
  id: ID! @unique
  firstname: String
  lastname: String
  email: String! @unique
  password: String!
  has_two_factor: Boolean! @default(value: false)
  reset_token: String @unique
  qr_secret: String @unique
  code: String
  providers: [Provider!]!
  investments: [Investment!]!
}

type Review {
  id: ID! @unique
  rating: Int!
  text: String
  date: String!
  provider: Provider! @relation(name: "ReviewsForProviders")
}
