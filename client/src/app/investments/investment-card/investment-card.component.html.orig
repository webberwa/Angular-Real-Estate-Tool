<mat-card class="investment-card">
  <mat-card-header>
    <mat-card-title>
      <a routerLink="/investments/{{investment.id}}" routerLinkActive="active">
        {{ investment.address }}
      </a>
    </mat-card-title>
    <mat-card-subtitle>
      {{ investment.price | currency: 'USD' }}
    </mat-card-subtitle>
  </mat-card-header>
  <mat-card-content>
    <mat-grid-list cols="2" rowHeight="60px">
      <mat-grid-tile>
        <div class="card-subtitle">Monthly Rent</div>
        <div class="card-details">
          {{ investment.monthly_rent | currency: 'USD' }}
        </div>
      </mat-grid-tile>
      <mat-grid-tile>
        <div class="card-subtitle">Mortgage</div>
        <div class="card-details">
          {{ investment.mortgage_amount | currency: 'USD' }}
        </div>
      </mat-grid-tile>
      <mat-grid-tile>
        <div class="card-subtitle">Downpayment</div>
        <div class="card-details">
          {{ investment.mortgage_downpayment | currency: 'USD' }}
        </div>
      </mat-grid-tile>
      <mat-grid-tile>
        <div class="card-subtitle">Interest Rate</div>
        <div class="card-details">
          {{ investment.mortgage_interest_rate | percent: '1.1-2' }}
        </div>
      </mat-grid-tile>
    </mat-grid-list>
  </mat-card-content>

